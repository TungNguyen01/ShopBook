<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/cardview_book"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="144dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/book1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="20dp"

                        android:id="@+id/image_bookbag"
                        android:layout_width="106dp"
                        android:layout_height="106dp"/>
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/textview_name"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:text="Mat Biec"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                        android:layout_width="200dp"
                        android:layout_height="18dp"
                        />
                    <TextView
                        android:id="@+id/textview_price"
                        app:layout_constraintTop_toBottomOf="@+id/textview_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="100.000 VND"
                        android:textColor="@color/gray"
                        android:textSize="12dp"
                        app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        />
                    <ImageView
                        android:id="@+id/image_fav"
                        android:src="@drawable/fav_icon"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                        app:layout_constraintTop_toBottomOf="@+id/textview_price"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <ImageView

                        android:id="@+id/image_add"
                        android:layout_marginTop="60dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="18dp"
                        android:id="@+id/textview_quantity"
                        app:layout_constraintRight_toLeftOf="@+id/image_add"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="60dp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:id="@+id/image_reduce"
                        android:src="@drawable/plus"
                        app:layout_constraintRight_toLeftOf="@+id/textview_quantity"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="60dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
