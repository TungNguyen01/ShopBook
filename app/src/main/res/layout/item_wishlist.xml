<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="180dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cardview_book"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/botron_constrainlayout"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/book1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/image_bookbag"
                android:layout_width="110dp"
                android:layout_height="110dp"/>
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/textview_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="Mat Biec"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                android:layout_width="247dp"
                android:layout_height="20dp"
                />
            <TextView
                android:id="@+id/textview_price"
                app:layout_constraintTop_toBottomOf="@+id/textview_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="100.000 VND"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                />
            <ImageView
                android:src="@drawable/fav_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                app:layout_constraintTop_toBottomOf="@+id/textview_price"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>