<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="160dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cardview_book"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="144dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/botron_constrainlayout"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/book1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/image_bookbag"
                android:layout_width="106dp"
                android:layout_height="106dp"/>
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/textview_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="Mat Biec"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                android:layout_width="200dp"
                android:layout_height="18dp"
                />
            <TextView
                android:id="@+id/textview_price"
                app:layout_constraintTop_toBottomOf="@+id/textview_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="100.000 VND"
                android:textColor="@color/gray"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/textview_nxb"
                app:layout_constraintTop_toBottomOf="@+id/textview_price"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="NXB"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/image_bookbag"
                android:layout_width="147dp"
                android:layout_height="28dp"
                />
            <ImageView
                android:id="@+id/image_add"
                android:layout_marginTop="90dp"
                android:src="@drawable/addwishlist"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="66dp"
                android:layout_height="66dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView

        android:layout_marginTop="90dp"
        android:src="@drawable/addwishlist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="66dp"
        android:layout_height="66dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>