<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cst1"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="50dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Home"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/account"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/cst1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv1"
                android:text="New and Community"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:id="@+id/img"
                android:src="@drawable/first_book"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="Category"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />
            <ImageView
                android:id="@+id/img1"
                android:src="@drawable/right"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_category"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                />
            <TextView
                android:id="@+id/tv_newarrival"
                android:text="New Arrivals"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_category"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_newarrival"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_newarrival"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_discoverstore"
                android:text="Discover Author"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_newarrival"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_discoverstore"
                app:layout_constraintTop_toBottomOf="@+id/tv_discoverstore"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_hotbook"
                android:text="Hot Book"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_discoverstore"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_hotbook"
                app:layout_constraintTop_toBottomOf="@+id/tv_hotbook"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>