<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_item_histroy"
        android:textSize="16dp"
        android:maxLines="1"
        android:padding="5dp"
        android:ellipsize="end"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_remove"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_remove"
        android:src="@drawable/ic_remove"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_item_histroy"
        app:layout_constraintStart_toEndOf="@id/text_item_histroy"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_line"
        android:background="@color/line"
        app:layout_constraintStart_toStartOf="@id/text_item_histroy"
        app:layout_constraintEnd_toEndOf="@id/text_item_histroy"
        app:layout_constraintTop_toBottomOf="@id/text_item_histroy"/>

</androidx.constraintlayout.widget.ConstraintLayout>